pipeline {
    environment {
        image = "${registry}"
        dockerImage = ""
    }
    agent any
    stages {
        stage('Building Image') {
            steps {
                script {
                    dockerImage = docker.build image
                }					
            }
        }
    }
    post {
        success {
            build job: 'pipeline_docker_project_2', parameters: [string(name: 'imagename', value: registry)]
        }
    }
}

