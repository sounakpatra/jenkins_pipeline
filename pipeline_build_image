pipeline {
    environment {
        registry = "sounakpatra/jenkins_test"
        registryCredential = 'github'
        dockerImage = ""
    }
    agent any
    stages {
        stage('Building Image') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }					
            }
        }
    }
    post {
	    success {
            build job: 'pipeline_docker_project_2'
        }
    }
}